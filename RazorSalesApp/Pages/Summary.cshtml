@page
@model RazorSalesApp.Pages.SummaryModel

@{
    ViewData["Title"] = "Sales Summary";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-bar-chart-line"></i> Sales Summary
        </h2>
        <p class="text-secondary">Overview of total sales and items sold</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body text-center">
                    <h4 class="text-success fw-semibold">
                        <i class="bi bi-currency-rupee"></i> Total Sales Amount
                    </h4>
                    <h3 class="fw-bold text-dark mb-3">₹ @Model.TotalSales.ToString("N2")</h3>

                    <h5 class="text-secondary fw-semibold">
                        <i class="bi bi-box-seam"></i> Total Items Sold
                    </h5>
                    <h4 class="fw-bold text-dark">@Model.TotalItemsSold</h4>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-page="./Index" class="btn btn-outline-primary px-4">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
