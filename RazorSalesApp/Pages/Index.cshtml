@page
@model RazorSalesApp.Pages.IndexModel
@{
    ViewData["Title"] = "Sales Records";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-bar-chart-line"></i> Sales Records
        </h2>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Sale
        </a>
    </div>

    @if (Model.Sales == null || !Model.Sales.Any())
    {
        <div class="alert alert-warning text-center">
            <i class="bi bi-exclamation-triangle"></i> No sales records found.
            <a asp-page="Create" class="alert-link">Add your first sale!</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Sales[0].ProductName)</th>
                        <th>@Html.DisplayNameFor(model => model.Sales[0].Quantity)</th>
                        <th>@Html.DisplayNameFor(model => model.Sales[0].Price)</th>
                        <th>@Html.DisplayNameFor(model => model.Sales[0].SalesDate)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Sales)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                            <td>₹@item.Price.ToString("0.00")</td>
                            <td>@item.SalesDate.ToString("dd-MMM-yyyy")</td>
                            <td class="text-center">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

