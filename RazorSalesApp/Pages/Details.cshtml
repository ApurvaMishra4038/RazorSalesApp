@page
@model RazorSalesApp.Pages.DetailsModel

@{
    ViewData["Title"] = "Sale Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-card-list"></i> Sale Details
        </h2>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4 text-dark fw-semibold">
                        <i class="bi bi-box-seam"></i> Product Information
                    </h5>

                    <dl class="row">
                        <dt class="col-sm-4 text-secondary fw-semibold">
                            @Html.DisplayNameFor(model => model.Sales.ProductName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Sales.ProductName)
                        </dd>

                        <dt class="col-sm-4 text-secondary fw-semibold">
                            @Html.DisplayNameFor(model => model.Sales.Quantity)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Sales.Quantity)
                        </dd>

                        <dt class="col-sm-4 text-secondary fw-semibold">
                            @Html.DisplayNameFor(model => model.Sales.Price)
                        </dt>
                        <dd class="col-sm-8">
                            ₹ @Html.DisplayFor(model => model.Sales.Price)
                        </dd>

                        <dt class="col-sm-4 text-secondary fw-semibold">
                            @Html.DisplayNameFor(model => model.Sales.SalesDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Sales.SalesDate)
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="./Edit" asp-route-id="@Model.Sales.Id" class="btn btn-primary px-4">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="./Index" class="btn btn-outline-danger">
                            <i class="bi bi-x-circle"></i> Close
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
