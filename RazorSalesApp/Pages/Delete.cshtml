@page
@model RazorSalesApp.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete Sale";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-danger fw-bold">
            <i class="bi bi-trash3"></i> Delete Sale
        </h2>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4 text-danger fw-semibold">
                        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this record?
                    </h5>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-secondary fw-semibold">
                            @Html.DisplayNameFor(model => model.Sales.ProductName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Sales.ProductName)
                        </dd>

                        <dt class="col-sm-4 text-secondary fw-semibold">
                            @Html.DisplayNameFor(model => model.Sales.Quantity)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Sales.Quantity)
                        </dd>

                        <dt class="col-sm-4 text-secondary fw-semibold">
                            @Html.DisplayNameFor(model => model.Sales.Price)
                        </dt>
                        <dd class="col-sm-8">
                            ₹ @Html.DisplayFor(model => model.Sales.Price)
                        </dd>

                        <dt class="col-sm-4 text-secondary fw-semibold">
                            @Html.DisplayNameFor(model => model.Sales.SalesDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Sales.SalesDate)
                        </dd>
                    </dl>

                    <form method="post" class="text-center">
                        <input type="hidden" asp-for="Sales.Id" />
                        <button type="submit" class="btn btn-danger px-4 me-2">
                            <i class="bi bi-trash-fill"></i> Confirm Delete
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
